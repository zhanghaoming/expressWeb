</div>
<!--导航栏结束-->

<div id="center">
    <div class="panel panel-default">
        <div class="panel-heading" style="font-size: large; font-weight: bold; text-align: center;">失物招领</div>
        <div class="panel-body">
            <div class="pull-right">
                <div class="btn-group">
                    <button type="button" class="btn btn-success btn-filter" data-target="pagado">证件</button>
                    <button type="button" class="btn btn-default btn-filter" data-target="pendiente">衣物</button>
                    <button type="button" class="btn btn-warning btn-filter" data-target="pendiente">生活用品</button>
                    <button type="button" class="btn btn-danger btn-filter" data-target="cancelado">电子产品</button>
                    <button type="button" class="btn btn-default btn-filter" data-target="all">其他</button>
                </div>
            </div>
            <div class="table-container" id="lost">
                <table class="table table-filter">
                    <tbody>
					 <% for(var i = 0;i < lostFoundArr.length;i++){%>
                    <tr data-status="pagado" id="<%=unescape(lostFoundArr[i].announce_id)%>" onclick="lost_info(this)">
                        <td></td>
                        <td>
                            <a href="javascript:;" class="star">
                                <i class="glyphicon glyphicon-star"></i>
                            </a>
                        </td>
                        <td>
                            <div class="media">
                                <a href="#" class="pull-left">
                                    <img src="<%=unescape(lostFoundArr[i].img)%>" class="media-photo">
                                </a>
                                <div class="media-body">
                                    <span class="media-meta pull-right"><%=unescape(lostFoundArr[i].time)%></span>
                                    <h4 class="title"><%=unescape(lostFoundArr[i].name)%>
                                        <span class="pull-right pagado"><%=unescape(lostFoundArr[i].place)%></span>
                                    </h4>
                                    <p class="summary"><%=unescape(lostFoundArr[i].intro)%></p>
                                </div>
                            </div>
                        </td>
                    </tr>
					<%} %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>
</body>

</html>