<!--导航栏结束-->
<div id="center">
    <div class="panel panel-default">
        <div class="panel-heading" style="font-size: large; font-weight: bold">完善个人信息</div>
        <div class="panel-body">
            <form class="form-horizontal">
                <fieldset>
                    <div class="form-group">
                        <label class="col-md-4 control-label">用户名：</label>
                        <p style="float: left; font-size: larger"><%=unescape(personal[0].account_name)%></p>
                    </div>
                    <div class="form-group">
                        <label class="col-md-4 control-label">邮箱：</label>
                        <p style="float: left; font-size: larger"><%=unescape(personal[0].email)%></p>
                    </div>
                    <div class="form-group">
                        <label class="col-md-4 control-label">认证：</label>
                        <p style="float: left; font-size: larger"><%=unescape(personal[0].approve)%></p>
                    </div>
                    <div class="form-group">
                        <label class="col-md-4 control-label">积分：</label>
                        <p style="float: left; font-size: larger"><%=unescape(personal[0].credit)%></p>
                    </div>
                    <div class="form-group">
                        <label class="col-md-4 control-label">联系方式：</label>
                        <div class="col-md-6">
                            <input id="tel" type="tel" class="form-control input-md" required="required" value="<%=unescape(personal[0].tel)%>">
                        </div>
                    </div>
                    <div class="col-md-4 col-md-offset-4">
                        <button class="btn btn-primary btn-lg" type="button" onclick="changeTel()">确认</button>
                        <button class="btn btn-primary btn-lg col-md-offset-5" type="reset">重置</button>
                    </div>
                </fieldset>
            </form>
        </div>
    </div>
</div>

</body>

</html>